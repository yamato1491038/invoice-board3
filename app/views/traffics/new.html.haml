.wrapper
  .Title
    交通費登録
  .Regular
    - if @traffic.errors.any?
      .Regular__errors
        .Regular__errors__content
          %h2= "#{@traffic.errors.full_messages.count}件のエラーが発生しました。"
          %ul
            - @traffic.errors.full_messages.each do |message|
              %li= message
    .Regular__table
      = form_with model: @traffic, local: true do |f|
        .Regular__table__content
          .Regular__table__content__tb
            %table{border: "1"}
              %tr
                %th.table_style
                  日付
                %th.table_style
                  HNO
                %th.table_style
                  方面、区間
                %th.table_style
                  走行距離(km)
                %th.table_style
                  交通料金(円)
                %th.table_style
                  詳細
              %tr
                %td.table_style
                  = f.date_field :dating, use_month_numbers:true,prompt:"--", class: ''
                %td.table_style
                  = f.number_field :hno, min: 0,class:""
                %td.table_style
                  = f.text_field :field, class:""
                %td.table_style
                  = f.number_field :distance, min: 0,step:"0.1",class:""
                %td.table_style
                  = f.number_field :fee, min: 0,class:""
                %td.table_style
                  = f.text_field :content, class:""
        .Regular__table__btn
          .Regular__table__btn__content
            = f.submit '交通費登録', class: 'btn-lg btn btn-success'
    .Regular__return
      .Regular__return__btn
        = link_to "戻る","/regulars",class: 'btn-lg btn btn-secondary'