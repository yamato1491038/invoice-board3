.wrapper
  .Title
    交通費登録
  .Regular
    .Regular__table
      = form_with model: @traffic, local: true do |f|
        %table{border: "1"}
          %tr
            %th.table_style
              日付
            %th.table_style
              HNO
            %th.table_style
              方面、区間
            %th.table_style
              走行距離(km)
            %th.table_style
              交通料金(円)
            %th.table_style
              詳細
          %tr
            %td.table_style
              = f.date_field :dating, use_month_numbers:true,prompt:"--", class: ''
            %td.table_style
              = f.number_field :hno, min: 0,class:""
            %td.table_style
              = f.text_field :field, class:""
            %td.table_style
              = f.number_field :distance, min: 0,step:"0.1",class:""
            %td.table_style
              = f.number_field :fee, min: 0,class:""
            %td.table_style
              = f.text_field :content, class:""
        = f.submit '登録', class: 'Regular__table__btn btn btn-success'
    .Regular__return
      = link_to "戻る","/regulars",class: 'btn btn-secondary'