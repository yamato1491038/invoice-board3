.wrapper
  .Title
    内訳書表示
  .Regular__form
    .Regular__form__content
      = form_with url: check_breakdowns_path, local: true, method: :get, class: "" do |f|

        = f.label "コミュニケーター"
        = f.collection_select(:user_id, User.all, :id, :name, {prompt: true}, {class:"table_style"})

        = f.label "年月"
        = f.date_select :dating, {discard_day:true,use_month_numbers:true}, class: 'table_style'

        = f.submit "内訳検索", class: "btn btn-lg btn-info"
  .Regular__return
    = link_to "管理画面へ戻る","/contracts",class: 'btn-lg btn btn-secondary'