.wrapper
  .Title
    説得費検索結果
  .Periodcenter
    .Periodcenter__content
      = "#{@name}さん"
      = "#{@year}年#{@month}月分"
  .Regular__show
    .Regular__show__table
      - if @persuations.present?
        %table{border: "1"}
          %tr
            %th.table_style
              日付
            %th.table_style
              HNO
            - @contracts.each do |contract|
              %th.table_style
                = contract.name
            %th.table_style
              削除ボタン
          - @persuations.each do |persuation|
            %tr
              %td.table_style
                = persuation.dating
              %td.table_style
                = persuation.hno
              - @contracts.each do |work|
                - if persuation.contracts.include?(work)
                  %th.table_style
                    = 1
                - else
                  %th.table_style
                    = 0
              %td.table_style
                = link_to '削除', "/persuations/#{persuation.id}", method: :delete, class:"btn btn-danger"
      - else
        該当の月はありません
  .Regular__return
    = link_to "戻る","/breakdowns/:id",class: 'btn-sized btn btn-secondary'
