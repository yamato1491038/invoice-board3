.wrapper
  .AccountPage
    .AccountPage__left
      .AccountPage__left__icon
        %svg{width: "30em", height:"30em", viewBox:"0 0 16 16", class:"bi bi-layers-fill", fill:"currentColor", xmlns:"http://www.w3.org/2000/svg"}
          %path{fill:{rule: "evenodd"}, d: "M7.765 1.559a.5.5 0 0 1 .47 0l7.5 4a.5.5 0 0 1 0 .882l-7.5 4a.5.5 0 0 1-.47 0l-7.5-4a.5.5 0 0 1 0-.882l7.5-4z"}
          %path{fill:{rule:"evenodd"},d:"M2.125 8.567l-1.86.992a.5.5 0 0 0 0 .882l7.5 4a.5.5 0 0 0 .47 0l7.5-4a.5.5 0 0 0 0-.882l-1.86-.992-5.17 2.756a1.5 1.5 0 0 1-1.41 0l-5.17-2.756z"}
      .AccountPage__left__title
        .AccountPage__left__title__content
          Invoice
        .AccountPage__left__title__content
          Board
        .AccountPage__left__title__content
          System
    .AccountPage__right
      .AccountPage__right__title
        ログイン
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .FormField
          .FormField__label--normal
            = f.label :email
          .FormField__input--normal
            = f.email_field :email, autofocus: true
          .FormField
            .FormField__label--normal
              = f.label :password
              %i (英数字8文字以上)
            .FormField__input--normal
              = f.password_field :password, autocomplete: "off" 
          .actions
            = f.submit "Log in", class: 'Button UserButton'
        .AccountPage__right__down
          登録
        .Button.UserButton
          = render "devise/shared/links"